@model myproject.Models.Order
@{
    ViewBag.Title = "Orders Management";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    var list = Session["OrderList"] as List<myproject.Models.Detail>;
    var products = Session["Products"] as List<myproject.Models.Product>;
}

<!-- Page Heading -->
<h1 class="h3 mb-2 text-gray-800">OrderID: @Html.DisplayFor(model => model.OrderID)</h1>
<!-- DataTales Example -->
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <div class="row">
            <div class="col-lg-4">
                <h6>Customer name: @Html.DisplayFor(model => model.Name)</h6>
                <h6>Phone number: @Html.DisplayFor(model => model.PhoneNumber)</h6>
            </div>
            <div class="col-lg-5">
                <h6>Total Price: @Html.DisplayFor(model => model.TotalPrice)</h6>
                <h6>Buy Date: @Html.DisplayFor(model => model.Date)</h6>
            </div>
            <div class="col-lg-3">
                <h6>Payment method: @Html.DisplayFor(model => model.PaymentMethod)</h6>
                <h6>Status: @Html.DisplayFor(model => model.Checked)</h6>
            </div>
        </div>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Product ID</th>
                        <th>Amout</th>
                        <th>Single Price</th>
                        <th>Image</th>
                    </tr>
                </thead>
                <tbody>

                    @foreach (var item in list)
                    {
                        <tr>
                            <td>
                                @item.ProductID
                            </td>
                            <td>
                                @item.Amount
                            </td>
                            @foreach (var product in products)
                            {
                                if (product.productID == item.ProductID)
                                {
                                    <td>@product.price</td>
                                    <td><img src="@product.image" style="width:50px; height:50px;" /></td>
                                }
                            }
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>