@model IEnumerable<myproject.Models.Product>

@{
    Layout = null;
}

@foreach (var item in Model)
{
    <div class="col-lg-3" style="margin-bottom:130px;justify-content: center;display: flex;">
        <div style="height:450px;width:350px;">
            <a href='@Url.Action("Details", "Products", new { id=item.productID })'><img src="@Html.DisplayFor(modelItem => item.image)"></a>
            <a href='@Url.Action("Details", "Products", new { id=item.productID })'><p class="productname">@Html.DisplayFor(modelItem => item.productname)</p></a>
            <p class="productprice">Giá: @Html.DisplayFor(modelItem => item.price)</p>
        </div>
    </div>
}