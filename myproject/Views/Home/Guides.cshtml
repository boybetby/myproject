                @Html.DisplayNameFor(model => model.Guide_Level)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Guide_Tip)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.clade_hashtag)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.family_hasttag)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.difficulty_hashtag)
            </th>
            <th></th>
        </tr>
    
