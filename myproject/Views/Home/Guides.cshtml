@model IEnumerable<myproject.Models.Guide>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>View</title>
</head>
<body>
    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.GuideTitle)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GuideDescription)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Guide_Light)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Guide_Water)
            </th>
