                @Html.DisplayFor(modelItem => item.GuideTitle)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GuideDescription)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Guide_Light)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Guide_Water)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Guide_Petfriendly)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Guide_Level)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Guide_Tip)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.clade_hashtag)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.family_hasttag)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.difficulty_hashtag)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
                @Html.ActionLink("Details", "Details", new { id=item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id=item.Id })
            </td>
        </tr>
    }
    
    </table>
</body>
</html>
