@model IEnumerable<myproject.Models.EventSubscriber>

@{
    ViewBag.Title = "EventSubscriberList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Subscriber List</h2>
<table class="table">
    <tr>
        <th>
            Subscriber Email
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.SubscriberEmail)
        </td>
        <td>
            @Html.ActionLink("Send email reminder", "SendEmail", new { id=item.Id })
        </td>
    </tr>
}

</table>
