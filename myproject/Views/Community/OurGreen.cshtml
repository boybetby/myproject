@model IEnumerable<myproject.Models.Post>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <title>Yen</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="../../Content/css/style.css">
    <link rel="stylesheet" href="../../Content/css/social.css">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="../../Content/website-menu-07/css/style.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <link class="jsbin" href="http://ajax.googleapis.com/ajax/libs/jqueryui/1/themes/base/jquery-ui.css" rel="stylesheet" type="text/css" />
    <script class="jsbin" src="http://ajax.googleapis.com/ajax/libs/jquery/1/jquery.min.js"></script>
    <script class="jsbin" src="http://ajax.googleapis.com/ajax/libs/jqueryui/1.8.0/jquery-ui.min.js"></script>
    <style>
        @@import url('https://fonts.googleapis.com/css2?family=Montserrat:wght@100;200&display=swap');
    </style>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <style>
        .checked {
            color: orange;
        }
    </style>
    <script>
        function readURL(input) {
            if (input.files && input.files[0]) {
                var reader = new FileReader();

                reader.onload = function (e) {
                    $('#blah')
                        .attr('src', e.target.result)
                        .width(200)
                        .height(150);
                    document.getElementById("blah").style.visibility = "visible";
                    document.getElementById("blah").style.margin = "15px 0 15px 0";
                    document.getElementById("imagebase64").value = e.target.result;
                };
                document.getElementById("addpost").style.height = "330px";
                reader.readAsDataURL(input.files[0]);

            }

        }

        function openLoginForm() {
            document.body.classList.add("showLoginForm");
        }
        function closeLoginForm() {
            document.body.classList.remove("showLoginForm");
        }

        function openSignupForm() {
            document.body.classList.add("showSignupForm");
        }
        function closeSignupForm() {
            document.body.classList.remove("showSignupForm");
        }

        

    </script>
</head>
<body>
    <div class="wrapper_product" style="background-image: url('../../images/product_bg1.jpg'); height: 120px;">
        <header style="padding-left:40px; position: absolute;width: 100%;">
            <nav>
                <div class="menu-icon">
                    <i class="fa fa-bars fa-2x"></i>
                </div>
                <div class="logo">
                    <a href="#"><img src="../../images/yen.png" class="yen"></a>
                </div>
                <div class="menu">
                    <ul style="display:inline-block; width: 100%;">
                        <li>@Html.ActionLink("PRODUCT", "Index", "Products")</li>
                        <li>@Html.ActionLink("GREEN PRODUCTION", "Index", "Furniture")</li>
                        <li>@Html.ActionLink("WORKSHOP", "Index", "Workshop")</li>
                        <li>@Html.ActionLink("COMMUNITY", "OurGreen", "Community")</li>
                        <li style="float:right;">
                            <a href='@Url.Action("Index", "Cart")' style="color:white;"><img src="../../images/carticon.png" style="width:40px;height: 40px;"></a> @if (Session["Number"] != null)
                            {
                                <span class='badge badge-warning' id='lblCartCount'>
                                    @Session["Number"]
                                </span>
                            }
                        </li>
                    </ul>
                </div>
            </nav>
        </header>
    </div>

    <!-- login form -->
        <div class="popup-overlay"></div>
        <div class="popup">
            <div class="popup-close" onclick="closeLoginForm()">×</div>
            <div class="form">
                <div class="avatar">
                    <img src="~/images/yen.png" alt="">
                </div>
                <div class="header">
                    Login
                </div>
                @using (Html.BeginForm("Login", "Community", FormMethod.Post))
                {
                    <div class="element">
                        <label for="username">Username</label>
                        <input type="text" id="username" name="username" required >
                    </div>
                    <div class="element">
                        <label for="password">Password</label>
                        <input type="password" id="password" name="password" required >
                    </div>
                    <div class="element">
                        <button type="submit">Login</button>
                    </div>
                }
            </div>
        </div>
    <!-- end login form -->

    <!-- Sign-up form -->
    <div class="popup-signup-overlay"></div>
    <div class="popup-signup">
        <div class="popup-close-signup" onclick="closeSignupForm()">×</div>
        <div class="form-signup">
            <div class="avatar">
                <img src="~/images/yen.png" alt="">
            </div>
            <div class="header">

            </div>
            @using (Html.BeginForm("Signup", "Community", FormMethod.Post))
            {
                <div class="element">
                    <label for="username">Username</label>
                    <input type="text" id="username" name="username" required >
                </div>
                <div class="element">
                    <label for="fullname">Full name</label>
                    <input type="text" id="fullname" name="fullname" required >
                </div>
                <div class="element">
                    <label for="password">Password</label>
                    <input type="password" id="password" name="password" required >
                </div>
                <div class="element">
                    <label for="confirmpassword">Confirm password</label>
                    <input type="password" id="confirmpassword" name="confirmpassword" required >
                </div>
                <div class="element">
                    <button>Sign-up</button>
                </div>
            }
        </div>
    </div>
    <!-- end signup form-->

    <main>
        <div class="">
            <div class="row" style="padding-left:40px">
                <div class="col-2">
                    <div id="menu">
                        <a>
                            <div class="selected">
                                Our Green
                            </div>
                        </a>

                        <div>
                            Event
                        </div>
                        <div>
                            Green Live
                        </div>
                    </div>

                    <div id="account">
                        @if (@Session["Id"] != null)
                        {
                            <a>
                                <div style="color: #009933">
                                    Hello, @Session["FullName"]
                                </div>
                            </a>
                            <a href="@Url.Action("Logout", "Community")">
                                <div>
                                    Logout
                                </div>
                            </a>
                        }
                        else
                        {
                            <a href="#" onclick="openLoginForm()">
                                <div style="color: #009933">
                                    Login
                                </div>
                            </a>
                            <a href="#" onclick="openSignupForm()">
                                <div>
                                    Sign-up
                                </div>
                            </a>
                        }
                    </div>

                </div>
                <div class="col-10">
                    <div class="cart" style="margin-left: 30px; margin-right:30px; border-radius: 10px;">
                        <div class="row" style="width:100%">
                            <div class="col-8" id="socialcontent">

                                @using (Html.BeginForm("Post", "Community", FormMethod.Post))
                                {
                                    <div id="addpost">
                                        <p>Share your green</p>
                                        <div class="input">
                                            <input type="text" id="inputcontent" placeholder="Tell us about your green place." name="inputcontent">
                                            <label for="inputimage" style="float: right;">
                                                <img src="~/images/imageicon.png" height="40px" width="40px" />
                                            </label>
                                            <input type="file" id="inputimage" accept="image/*" onchange="readURL(this);" style="display:none">
                                            <img id="blah" src="#" alt="your image" style="visibility: hidden; height: 0;padding-left: 5px;" />
                                            <input type="hidden" name="imagebase64" id="imagebase64" value="0" />
                                            <input type="hidden" name="displayname" id="displayname" value="@Session["FullName"]" />
                                        </div>
                                        @if (@Session["Id"] != null)
                                        {
                                            <button type="submit">Post</button>
                                        }
                                        else
                                        {
                                            <button type="submit" disabled>Please login first</button>
                                        }
                                    </div>
                                }



                                @foreach (var item in Model)
                                {
                                    { Html.RenderPartial("PostCard", item); }
                                }

                            </div>

                            <!-- chat script -->
                            <script src="~/Scripts/jquery-3.4.1.min.js"></script>
                            <script src="~/Scripts/jquery.signalR-2.4.2.min.js"></script>
                            <script src="../signalr/hubs"></script>
                            <script type="text/javascript">
                                $(function () {
                                    // Declare a proxy to reference the hub.
                                    var chat = $.connection.chatHub;
                                    // Create a function that the hub can call to broadcast messages.
                                    chat.client.broadcastMessage = function (name, message) {
                                        // Html encode display name and message.
                                        var encodedName = $('<div />').text(name).html();
                                        var encodedMsg = $('<div />').text(message).html();
                                        var user = $('#displayname').val();
                                        // Add the message to the page.
                                        if (user == encodedName) {
                                            $('#chat-content').append('<div class="media media-chat media-chat-reverse"><div class= "media-body" ><div style="float: right;font-weight: 400;">' + encodedName + '</div> <p>' + encodedMsg + '</p> </div></div>');
                                        }
                                        else {
                                            $('#chat-content').append('<div class="media media-chat"><div class= "media-body" ><div style="font-weight: 400;">' + encodedName + '</div> <p>' + encodedMsg + '</p> </div></div>');
                                        }
                                        var elem = document.getElementById('chat-content');
                                        elem.scrollTop = elem.scrollHeight;
                                    };
                                    // Set initial focus to message input box.
                                    $('#message').focus();
                                    // Start the connection.
                                    $.connection.hub.start().done(function () {
                                        $('#sendmessage').click(function () {
                                            // Call the Send method on the hub.
                                            chat.server.send($('#displayname').val(), $('#message').val());
                                            // Clear text box and reset focus for next comment.
                                            $('#message').val('').focus();
                                        });
                                    });
                                });
                            </script>
                            <!--end chat script -->

                            <div class="col-4" style=" display: flex;justify-content: center;">
                                <div id="socialchat">
                                    <p style="padding-top: 20px;text-align: center;font-size: 20px;">
                                        Chat with everyone
                                    </p>
                                    <div class="page-content page-container" id="page-content">
                                        <div class="padding">
                                            <div style="width: 100%;">
                                                <div>
                                                    <div class="card card-bordered">

                                                        <div class="ps-container ps-theme-default ps-active-y" id="chat-content" style="overflow-y: scroll !important; height:500px !important;">
                                                            <div class="ps-scrollbar-x-rail" style="left: 0px; bottom: 0px;">
                                                                <div class="ps-scrollbar-x" tabindex="0" style="left: 0px; width: 0px;"></div>
                                                            </div>
                                                            <div class="ps-scrollbar-y-rail" style="top: 0px; height: 0px; right: 2px;">
                                                                <div class="ps-scrollbar-y" tabindex="0" style="top: 0px; height: 2px;"></div>
                                                            </div>
                                                        </div>
                                                        @if (@Session["Id"] != null)
                                                        {
                                                            <div class="publisher bt-1 border-light"> <img class="avatar avatar-xs" src="https://img.icons8.com/color/36/000000/administrator-male.png" alt="..."> <input class="publisher-input" type="text" placeholder="Write something" id="message"> <a class="publisher-btn" href="#" data-abc="true"><i class="fa fa-smile"></i></a> <a class="publisher-btn text-info" role="button" tabindex="0" data-abc="true" id="sendmessage"><i class="fa fa-paper-plane"></i></a> </div>
                                                        }
                                                        else
                                                        {
                                                             <div class="publisher bt-1 border-light" style="text-align:center"><p style="margin:auto">Please login to chat</p></div>
                                                        }

                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>


            </div>

        </div>
    </main>
</body>
</html>
