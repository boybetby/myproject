<body>

    <!--====== PRELOADER PART START ======-->
    <!--Subcribe event form-->
    <div class="popup-overlay"></div>
    <div class="popup">
        <div class="popup-close" onclick="closeEventForm()">×</div>
        <div class="form">
            <div class="avatar">
                <img src="~/images/yen.png" alt="">
            </div>
            <div class="header">
                @Model.EventName
            </div>
            @using (Html.BeginForm("EventSubs", "Community", FormMethod.Post))
            {
                <div class="element" style="margin-top: 50px">
                    <label for="username">Your Email Address</label>
                    <input type="text" id="subsemail" name="subsemail" required>
                    <input type="hidden" name="eventname" value="@Model.EventName" />
                    <input type="hidden" name="eventaddress" value="@Model.EventAddress" />
                    <input type="hidden" name="eventdate" value="@Model.EventDate" />
                </div>
                <div class="element">
                    <button type="submit">Send me a reminder email</button>
                </div>
            }
        </div>
    </div>
    <!--End Subcribe event form-->

    <div class="preloader">
        <div class="loader">
            <div class="ytp-spinner">
                <div class="ytp-spinner-container">
                    <div class="ytp-spinner-rotator">
                        <div class="ytp-spinner-left">
                            <div class="ytp-spinner-circle"></div>
                        </div>
                        <div class="ytp-spinner-right">
                            <div class="ytp-spinner-circle"></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!--====== PRELOADER PART ENDS ======-->
    <!--====== HEADER PART START ======-->

    <header class="header-area">
        <div class="navbar-area navbar-two">
            <div class="container">
                <div class="row">
                    <div class="col-lg-12">
                        <nav class="navbar navbar-expand-lg">
                            <a class="navbar-brand" href="index.html">
                                <img src="~/Content/assets/images/yen.png" alt="Logo" style="height: 80px; width: auto;">
                            </a>

                            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarTwo" aria-controls="navbarTwo" aria-expanded="false" aria-label="Toggle navigation">
                                <span class="toggler-icon"></span>
                                <span class="toggler-icon"></span>
                                <span class="toggler-icon"></span>
                            </button>

                            <div class="collapse navbar-collapse sub-menu-bar" id="navbarTwo">
                                <ul class="navbar-nav m-auto">
                                    <li class="nav-item active">
                                        <a class="page-scroll" href="@Url.Action("Index", "Products")">PRODUCT</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="page-scroll" href="@Url.Action("Index", "Furniture")">GREEN PRODUCTION</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="page-scroll" href="@Url.Action("Index", "Workshop")">WORKSHOP</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="page-scroll" href="@Url.Action("OurGreen", "Community")">COMMUNITY</a>
                                    </li>

                                </ul>
                            </div>


                        </nav> <!-- navbar -->
                    </div>
                </div> <!-- row -->
            </div> <!-- container -->
        </div>

        <div id="home" class="header-content-area bg_cover d-flex align-items-center" style="background-image: url(../../images/bg1.png)">
            <div class="container">
                <div class="row justify-content-center">
                    <div class="col-lg-10">
                        <div data-countdown="2020/10/01"></div>

                        <div class="header-content text-center">
                            <h2 class="header-title"> @Html.DisplayFor(model => model.EventName) </h2>
                            <h3 class="sub-title"> @Model.EventDate.ToString("dd MMMM yyyy hh:mm tt") at @Html.DisplayFor(model => model.EventAddress)</h3>

                            <ul class="header-btn">
                                <li>
                                    <a class="main-btn main-btn-2" href="#" onclick="openEventForm()">Register Now</a>
                                </li>

                            </ul>
                        </div>  <!-- header content -->
                    </div>
                </div> <!-- row -->
            </div> <!-- container -->
        </div> <!-- header content -->
    </header>

    <!--====== HEADER PART ENDS ======-->
    <!--====== ABOUT PART START ======-->

    <section id="about" class="about-area pb-130 pt-80">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-lg-6">
                    <div class="about-image mt-50 wow fadeInLeft" data-wow-duration="1s">
                        <img src="@Html.DisplayFor(model => model.EventImageBackground)" alt="About">
                    </div> <!-- about image -->
                </div>
                <div class="col-lg-6">
                    <div class="about-content mt-45 wow fadeInRight" data-wow-duration="1s">
                        <div class="section-title">
                            <h2 class="title">@Html.DisplayFor(model => model.EventName)</h2>
                        </div> <!-- section title -->

                        <p class="text mt-30" style="word-break: normal;">@Html.DisplayFor(model => model.EventAbout)</p>
                        <p class="date"><span>@Html.DisplayFor(model => model.EventDate.Day) <sup>th</sup></span> @Model.EventDate.ToString("MMMM yyyy")</p>
                    </div> <!-- about content -->
                </div>
            </div> <!-- row -->
        </div> <!-- container -->
    </section>

    <!--====== ABOUT PART ENDS ======-->
    <!--====== COUNTER PART START ======-->

    <section id="counter" class="counter-area pt-80 pb-130">
        <div class="container">
            <div class="row justify-content-md-center">

